{
  "name": "niconicomments-convert",
  "private": false,
  "version": "0.0.6",
  "type": "commonjs",
  "license": "MIT",
  "main": "build/electron/electron.js",
  "author": "xpadev(xpadev.net)",
  "homepage": "./",
  "scripts": {
    "format": "prettier --write \"{src,electron}/**/*.{tsx,ts,js,json,css,scss}\"",
    "build:win": "tsc -p electron&&npm run copy-files&&node build-script/win.js",
    "build:mac": "tsc -p electron&&npm run copy-files&&node build-script/mac.js",
    "build": "tsc -p electron&&npm run copy-files&&node build-script/win.js&&node build-script/mac.js",
    "copy-files": "npx rimraf build/electron/html&&npx vite build",
    "check-types": "npx tsc --noEmit",
    "electron:dev": "npm run copy-files&&concurrently \"tsc -p electron -w\" \"tsc -p electron && electron --unhandled-rejections=strict .\"",
    "eslint": "eslint {src,electron}/**/*.ts*",
    "eslint:fix": "eslint {src,electron}/**/*.ts* --fix",
    "lint": "npm run eslint&&npm run check-types",
    "lint:fix": "npm run format&&npm run eslint:fix&&npm run check-types",
    "prepare": "husky install"
  },
  "dependencies": {
    "ffmpeg-ffprobe-static": "^4.4.0-rc.11",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.14",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "@xpadev-net/niconicomments": "^0.2.34",
    "body-parser": "^1.20.1",
    "concurrently": "^7.3.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "21.3.0",
    "electron-builder": "^23.3.3",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "^8.0.2",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.3",
    "vite": "^3.2.4"
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "build": {
    "extraMetadata": {
      "main": "./build/electron/electron.js"
    },
    "files": [
      "build/**/*"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-ffprobe-static/ffmpeg*",
      "node_modules/ffmpeg-ffprobe-static/index.js",
      "node_modules/ffmpeg-ffprobe-static/package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
